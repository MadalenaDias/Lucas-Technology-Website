<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lucas Technology Services</title>

    <!-- Primary Meta Tags -->
    <title>Lucas Technology Services</title>
    <meta name="title" content="Lucas Tecnologia Services">
    <meta name="description" content="">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://lucastecnologiaservices.azurewebsites.net">
    <meta property="og:title" content="Lucas Tecnologia Services">
    <meta property="og:description" content="">
    <meta property="og:image" content="~/media/Logomarca00200">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://lucastecnologiaservices.azurewebsites.net">
    <meta property="twitter:title" content="Lucas Tecnologia Services">
    <meta property="twitter:description" content="">
    <meta property="twitter:image" content="~/media/Logomarca00200">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
          integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>


</head>

<body style="margin-bottom:0" onload="loading()">


    <div id="loading-spinner" class="d-flex justify-content-center fixed-center h-100"
         style="background-color: white; height: 100vh">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container d-flex">
                <a class="navbar-brand order-md-2 order-sm-1 row-sm-6 col-md-2  d-none d-sm-none d-md-block" asp-area=""
                   asp-controller="Home" asp-action="Index">
                    <img src="~/media/Logomarca00200.png" width="250px" heigth="87px" alt="">
                </a>
                </button>
                <div class="row flex-nowrap justify-content-between w-100 d-sm-block d-md-none">
                    <a class="navbar-brand order-md-2 order-sm-1 row-sm-6 col-md-5 " asp-area="" asp-controller="Home"
                       asp-action="Index">
                        <img class="" src="~/media/Logomarca00100.png" width="200px" heigth="80px" alt="">
                    </a>
                    <button class="navbar-toggler order-2 row-sm-6 border-0 " type="button" data-toggle="collapse"
                            data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between order-md-1 order-sm-2 col-md-4 ">
                    <ul class="navbar-nav flex-grow-1 ">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Service"
                               asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Video"
                               asp-action="Index">Videos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Consulting"
                               asp-action="Index">Consulting</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Updates"
                               asp-action="Index">News</a>
                        </li>



                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between order-md-3 col-md-5">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact"
                               asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="About" asp-action="Index">
                                About
                                us
                            </a>
                        </li>
                        
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item studantButton">
                            <a href="/Account" class="btn btn-primary buttonStudent text-nowrap">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px"
                                     fill="#000000">
                                    <path d="M0 0h24v24H0z" fill="none" />
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                </svg> Restrict Access
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 h-100">
            @RenderBody()
        </main>
    </div>
    <br>
    <!-- Footer -->
    <footer class=" text-center text-white" style="background-color: #3e2558">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                    <i class="fab fa-instagram"></i>
                </a>

            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Grid container -->
        <div class="container p-0 pb-2">
            <!-- Section: Social media -->
            <section class="d-flex justify-content-center ">
                <a class="nav-link text-white" style="padding-right: .2em !important" asp-area="" asp-controller="Service"
                   asp-action="Index">Services</a>
                <a class="nav-link text-white" style="padding-right: .2em !important" asp-area=""
                   asp-controller="Video" asp-action="Index">Videos</a>
                <a class="nav-link text-white" style="padding-right: .2em !important" asp-area=""
                   asp-controller="Consulting" asp-action="Index">Consulting</a>
                <a class="nav-link text-white" style="padding-right: .2em !important" asp-area="" asp-controller="Home"
                   asp-action="Contact">Contact</a>
                <a class="nav-link text-white" style="padding-right: .2em !important" asp-area="" asp-controller="About"
                   asp-action="Index">About us</a>

            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3 text-white" style="background-color: rgba(0, 0, 0, 0.2);">
            &copy; @DateTime.Now.Year - Lucas Technology Services
            
        </div>
        <!-- Copyright -->
    </footer>
    <script>
        AOS.init();
        function loading() {
            $("#loading-spinner").removeClass("d-flex").addClass("d-none");
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
